{
  "author": "Felix Geisend√∂rfer <felix@debuggable.com> (http://debuggable.com/)",
  "name": "measured",
  "description": "This is an alternative port of Coda Hale's metrics library.",
  "version": "1.1.0",
  "homepage": "https://github.com/felixge/node-measured",
  "engines": {
    "node": ">= 0.10"
  },
  "main": "./index",
  "scripts": {
    "lint": "jslint --edition=latest --color './**/*.js'",
    "watch": "npm run test:node -- --watch",
    "test:node-new": "./node_modules/.bin/_mocha -r @awt-node/esm './test/unit/**/test-*.mjs'",
    "test:node": "mocha './test/**/test-*.js'",
    "test:browser": "mochify './test/**/test-*.js'",
    "wd": "mochify --wd './test/**/test-*.js'",
    "pretest": "npm run lint",
    "test-new": "npm run test:node-new",
    "test": "npm run test:node && npm run test:browser"
  },
  "dependencies": {
    "inherits": "^2.0"
  },
  "devDependencies": {
    "@awt-node/esm": "^1.5.0",
    "jslint": "^0.8",
    "mocha": "^2.1",
    "mochify": "^2.1",
    "sinon": "^1.12"
  },
  "repository": {
    "url": "git://github.com/felixge/node-measured.git"
  },
  "files": [
    "index.js",
    "lib",
    "Readme.md",
    "CHANGES.md"
  ],
  "license": "MIT"
}
